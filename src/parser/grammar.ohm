Arithmetic {
  MAIN
    = Exp -- expr

  Exp
    = AddExp+ -- appl

  AddExp
    = AddExp "+" MulExp  -- plus
    | AddExp "-" MulExp  -- minus
    | MulExp

  MulExp
    = MulExp "*" ExpExp  -- times
    | MulExp "/" ExpExp  -- divide
    | ExpExp

  ExpExp
    = PriExp "^" ExpExp  -- power
    | PriExp

  PriExp
    = "(" Exp ")"  -- paren
    | "-" PriExp   -- neg
    | "let" ident "=" Exp "in" Exp -- let
    | "\\" ident "->" Exp -- abs
    | ident
    | number

  ident  (an identifier)
    = ~keyword letter alnum*

  number  (a number)
    = digit* "." digit+  -- fract
    | digit+             -- whole

  keyword = "let" | "in"
}
